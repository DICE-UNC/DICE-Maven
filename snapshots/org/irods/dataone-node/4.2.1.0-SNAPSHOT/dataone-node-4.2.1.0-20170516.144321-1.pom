			<version>${project.version}</version>
		</dependency>
		<!-- 
		<dependency>
			<groupId>org.irods.jargon.springboot</groupId>
			<artifactId>resteasy-spring-boot-starter</artifactId>
			<exclusions>
				<exclusion>
					<groupId>ch.qos.logback</groupId>
